<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/gray</item>
        <item name="android:windowFullscreen">true</item>
        <item name="coordinatorLayoutStyle">@style/Widget.Support.CoordinatorLayout</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_4</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/barlow_condensed_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogStyle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DateTimerPicker" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">#fff</item>
        <item name="android:textColorSecondary">#fff</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="MyTimePickerWidgetStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:numbersTextColor">#000</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>
</resources>
