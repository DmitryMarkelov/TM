<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/margin_3"
    android:paddingLeft="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3"
    android:paddingTop="@dimen/margin_3">

    <View
        android:id="@+id/top_margin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/refreshments_icon"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="@dimen/header_icon_size"
        android:src="@drawable/ic_bottle"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/refreshments_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/refreshments_tv"
        app:layout_constraintTop_toTopOf="@id/refreshments_tv" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/refreshments_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_1"
        android:layout_marginLeft="@dimen/margin_5"
        android:text="@string/refreshments"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_0"
        app:layout_constraintBottom_toTopOf="@id/call_beverage_cart"
        app:layout_constraintLeft_toRightOf="@id/refreshments_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_margin"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/call_beverage_cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        app:buttonIcon="@drawable/ic_golf_cart"
        app:buttonText="@string/call_beverage_cart"
        app:buttonTextSize="large"
        app:layout_constraintBottom_toTopOf="@id/place_food_order"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/refreshments_tv" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/place_food_order"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_size_0"
        android:layout_marginBottom="@dimen/margin_0"
        app:buttonColor="@color/green"
        app:buttonIcon="@drawable/ic_food"
        app:buttonText="@string/place_food_order"
        app:buttonTextSize="large"
        app:layout_constraintBottom_toTopOf="@id/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/call_beverage_cart" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        app:buttonColor="@color/white"
        app:buttonText="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/place_food_order" />


</androidx.constraintlayout.widget.ConstraintLayout>