<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_lighter"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvHole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:cardBackgroundColor="@color/green"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvHoleNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="@color/gray"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="@+id/cvHole"
        app:layout_constraintStart_toStartOf="@+id/cvHole"
        app:layout_constraintTop_toBottomOf="@+id/cvHole">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvNameTitle"
                android:text="@string/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvStrokesTitle"
                android:text="@string/strokes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvNameTitle" />

            <com.tagmarshal.golf.view.TMTextView
                android:id="@+id/tvTMPlayerOneName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:padding="8dp"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvNameTitle" />

            <TextView
                android:id="@+id/tvPlayerOneStrokes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="#eee"
                app:layout_constraintBottom_toBottomOf="@+id/tvTMPlayerOneName"
                app:layout_constraintEnd_toEndOf="@+id/tvStrokesTitle"
                app:layout_constraintStart_toStartOf="@+id/tvStrokesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTMPlayerOneName" />

            <com.tagmarshal.golf.view.TMTextView
                android:id="@+id/tvTMPlayerTwoName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTMPlayerOneName" />

            <TextView
                android:id="@+id/tvPlayerTwoStrokes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="#eee"
                app:layout_constraintBottom_toBottomOf="@+id/tvTMPlayerTwoName"
                app:layout_constraintEnd_toEndOf="@+id/tvStrokesTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvStrokesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTMPlayerTwoName"
                app:layout_constraintVertical_bias="0.0" />

            <com.tagmarshal.golf.view.TMTextView
                android:id="@+id/tvTMPlayerThreeName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTMPlayerTwoName" />

            <TextView
                android:id="@+id/tvPlayerThreeStrokes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="#eee"
                app:layout_constraintBottom_toBottomOf="@+id/tvTMPlayerThreeName"
                app:layout_constraintEnd_toEndOf="@+id/tvStrokesTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvStrokesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTMPlayerThreeName"
                app:layout_constraintVertical_bias="1.0" />

            <com.tagmarshal.golf.view.TMTextView
                android:id="@+id/tvTMPlayerFourName"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/gray"
                android:background="@color/white"
                android:padding="8dp"
                android:textSize="18sp"
                android:layout_marginTop="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTMPlayerThreeName" />

            <TextView
                android:id="@+id/tvPlayerFourStrokes"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:textColor="@color/black"
                android:background="#eee"
                app:layout_constraintBottom_toBottomOf="@+id/tvTMPlayerFourName"
                app:layout_constraintEnd_toEndOf="@+id/tvStrokesTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvStrokesTitle"
                app:layout_constraintTop_toTopOf="@+id/tvTMPlayerFourName"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>