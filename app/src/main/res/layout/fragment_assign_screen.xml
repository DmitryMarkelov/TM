<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/margin_3"
    android:paddingLeft="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3"
    android:paddingTop="@dimen/margin_3">

    <View
        android:id="@+id/top_margin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/course_icon"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="@dimen/header_icon_size"
        android:layout_marginBottom="@dimen/margin_2"
        android:layout_marginRight="@dimen/margin_6"
        android:src="@drawable/ic_golf_hole"
        app:layout_constraintBottom_toTopOf="@id/recyclerview"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/course_tv"
        app:layout_constraintTop_toBottomOf="@id/top_margin" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/course_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/select_course"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_0"
        app:layout_constraintBottom_toBottomOf="@id/course_icon"
        app:layout_constraintLeft_toRightOf="@id/course_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/course_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@drawable/alert_dialog_background"
        app:layout_constraintBottom_toTopOf="@id/info_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/course_icon" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/try_again_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:buttonText="@string/try_again"
        app:layout_constraintBottom_toBottomOf="@id/recyclerview"
        app:layout_constraintLeft_toLeftOf="@id/recyclerview"
        app:layout_constraintRight_toRightOf="@id/recyclerview"
        app:layout_constraintTop_toTopOf="@id/recyclerview" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_4"
        app:fontFam="regular_gothic_regular"
        app:layout_constraintBottom_toTopOf="@id/btn_permanently_assign_device"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />



    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/btn_permanently_assign_device"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:buttonColor="@color/green"
        app:buttonText="@string/assign_device"
        app:buttonTextSize="large"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/btn_cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:buttonBackgroundDrawable="@drawable/green_outline_button_background"
        app:buttonText="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>