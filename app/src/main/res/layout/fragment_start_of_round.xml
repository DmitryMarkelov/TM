<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:paddingBottom="@dimen/margin_3"
    android:paddingLeft="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3"
    android:paddingTop="@dimen/margin_3">

    <View
        android:id="@+id/top_margin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/group_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_5"
        android:gravity="center"
        android:text="@string/group"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_0"
        app:layout_constraintBottom_toBottomOf="@id/start_device_tag"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/start_device_tag"
        app:layout_constraintTop_toTopOf="@id/start_device_tag" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/start_device_tag"
        android:layout_width="@dimen/image_size_0"
        android:layout_height="@dimen/image_size_0"
        android:background="@drawable/circle_shape"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_2"
        app:layout_constraintLeft_toRightOf="@id/group_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_margin" />

    <View
        android:id="@+id/divider_1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_2"
        android:background="@color/gray_divider"
        app:layout_constraintTop_toBottomOf="@id/start_device_tag" />

    <ImageView
        android:id="@+id/starting_icon"
        android:layout_width="@dimen/image_size_4"
        android:layout_height="@dimen/image_size_4"
        android:layout_marginRight="@dimen/margin_6"
        android:src="@drawable/ic_delay"
        app:layout_constraintBottom_toBottomOf="@id/starting_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/starting_tv"
        app:layout_constraintTop_toTopOf="@id/starting_tv" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/starting_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:text="@string/starting_in"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_3"
        app:layout_constraintLeft_toRightOf="@id/starting_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_1" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/starting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_6"
        android:text="0 mins"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/starting_tv" />

    <View
        android:id="@+id/divider_2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_1"
        android:background="@color/gray_divider"
        app:layout_constraintTop_toBottomOf="@id/starting_time" />

    <ImageView
        android:id="@+id/hole_icon"
        android:layout_width="@dimen/image_size_4"
        android:layout_height="@dimen/image_size_4"
        android:layout_marginRight="@dimen/margin_6"
        android:src="@drawable/ic_golf_hole"
        app:layout_constraintBottom_toBottomOf="@id/hole_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/hole_tv"
        app:layout_constraintTop_toTopOf="@id/hole_tv" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/hole_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_2"
        android:text="Hole 0"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_2"
        app:layout_constraintLeft_toRightOf="@id/hole_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider_2" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/btn_view_course_map"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:buttonColor="@color/green"
        app:buttonText="@string/view_course_map"
        app:buttonTextSize="large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>