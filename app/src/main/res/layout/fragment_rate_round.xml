<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/gray"
    android:paddingLeft="@dimen/margin_3"
    android:paddingTop="@dimen/margin_3"
    android:paddingRight="@dimen/margin_3"
    android:paddingBottom="@dimen/margin_3">

    <View
        android:id="@+id/top_margin"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rate_icon"
        android:layout_width="@dimen/header_icon_size"
        android:layout_height="@dimen/header_icon_size"
        android:src="@drawable/ic_golf_hole"
        android:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/rate_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/rate_tv"
        app:layout_constraintTop_toTopOf="@id/rate_tv"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/rate_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_9"
        android:gravity="center"
        android:text="@string/rate_your_round_so_far"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_1"
        app:layout_constraintBottom_toTopOf="@id/rate_bar"
        app:layout_constraintLeft_toRightOf="@id/rate_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_margin"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_default="wrap" />

    <com.tagmarshal.golf.view.RateRoundView
        android:id="@+id/rate_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:RateRoundView_stars="0"
        app:layout_constraintBottom_toTopOf="@id/question_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rate_tv" />

    <com.tagmarshal.golf.view.TMTextView
        android:id="@+id/question_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_6"
        android:text="@string/awesome_what_do_you_love_the_best"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_4"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/input_message_field"
        app:layout_constraintTop_toBottomOf="@id/rate_bar" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/input_message_field"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/margin_2"
        android:background="@drawable/alert_dialog_background"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/submit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/question_tv">

        <EditText
            android:id="@+id/input_message"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@null"
            android:gravity="top"
            android:hint="@string/type_short_message"
            android:inputType="text"
            android:padding="@dimen/margin_5"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        android:layout_marginBottom="@dimen/margin_6"
        app:TMButtonSize="normal"
        app:buttonColor="@color/green"
        app:buttonText="@string/submit"
        app:buttonTextSize="large"
        app:layout_constraintBottom_toTopOf="@id/cancel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.tagmarshal.golf.view.TMButton
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_6"
        android:layout_marginRight="@dimen/margin_6"
        app:TMButtonSize="small"
        app:buttonColor="@color/gray_light"
        app:buttonText="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>