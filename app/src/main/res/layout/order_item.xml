<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/order_item">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/food_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_5"
        android:layout_marginTop="10dp"
        android:text="Chicken Burger"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/food_price_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_name_tv"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_5"
        android:textStyle="bold"
        android:text="R 56.00"
        />
    <LinearLayout
        android:id="@+id/description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/food_price_tv"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7">
           <TextView
               android:id="@+id/selectedOptionsTextView"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="horizontal"
            android:gravity="end"
            >
            <LinearLayout
                android:id="@+id/add_to_cart_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_to_cart_button">

                <ImageButton
                    android:id="@+id/remove_item_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_delete_outline_24"/>
                <TextView
                    android:id="@+id/item_count_textview"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:text="0"/>
                <ImageButton
                    android:id="@+id/add_item_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/transparent"
                    android:src="@drawable/baseline_add_24"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"
        android:layout_below="@id/description_container"
        />
</RelativeLayout>